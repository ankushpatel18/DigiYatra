<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_item" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/pop_isuer_btn"
        android:layout_width="0dp"
        android:layout_height="@dimen/_52sdp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white_background" />

    <ImageView
        android:id="@+id/img_issuer_logo"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_136sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="@+id/pop_isuer_btn"
        app:layout_constraintEnd_toEndOf="@+id/pop_isuer_btn"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="@+id/pop_isuer_btn"
        app:layout_constraintTop_toTopOf="@+id/pop_isuer_btn"
        app:layout_constraintVertical_bias="0.7"
        app:srcCompat="@drawable/rectangle_68" />

    <TextView
        android:id="@+id/txt_issuer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_49sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:fontFamily="@font/poppins"
        android:text="Digi Yatra Foundation"
        android:textColor="#000000"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@+id/pop_isuer_btn"
        app:layout_constraintEnd_toEndOf="@+id/pop_isuer_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pop_isuer_btn"
        app:layout_constraintTop_toTopOf="@+id/pop_isuer_btn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_learn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:text="Learn more"
        android:textColor="#00539B"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintBottom_toBottomOf="@+id/img_issuer_logo"
        app:layout_constraintStart_toEndOf="@+id/img_issuer_logo"
        app:layout_constraintTop_toBottomOf="@+id/txt_issuer_name" />

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/pop_isuer_btn"
        app:layout_constraintEnd_toEndOf="@+id/pop_isuer_btn"

        app:layout_constraintTop_toTopOf="@+id/pop_isuer_btn"
        app:srcCompat="@drawable/ic_arrow_forward" />

</androidx.constraintlayout.widget.ConstraintLayout>