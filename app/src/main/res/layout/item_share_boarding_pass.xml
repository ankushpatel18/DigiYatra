<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_15sdp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/text_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Are you ready to share?"
    android:textColor="@color/black"
    android:textSize="@dimen/_15ssp"
    android:fontFamily="@font/poppins"
    android:textAllCaps="false"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:cardBackgroundColor="#EBF3FC"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_title"
        app:layout_constraintTop_toBottomOf="@id/text_title">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/img_air_india"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/bg_circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/issuer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10ssp"
                android:fontFamily="@font/poppins"
                android:text="Air India"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@id/img_air_india"
                app:layout_constraintStart_toEndOf="@id/img_air_india"
                app:layout_constraintTop_toTopOf="@id/img_air_india" />

            <TextView
                android:id="@+id/txt_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:text="HYZ"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/img_air_india"
                app:layout_constraintTop_toBottomOf="@id/img_air_india" />

            <TextView
                android:id="@+id/time_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:text="06:10 AM"
                android:textAllCaps="true"
                android:textColor="#292B76"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/img_air_india"
                app:layout_constraintTop_toBottomOf="@id/txt_from" />

            <TextView
                android:id="@+id/flight_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10ssp"
                android:fontFamily="@font/poppins"
                android:text="Tuesday, January 11, 2022"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@id/img_air_india"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_air_india" />

            <TextView
                android:id="@+id/txt_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="HYZ"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@id/txt_from"
                app:layout_constraintEnd_toEndOf="@id/flight_date"
                app:layout_constraintTop_toTopOf="@id/txt_from" />

            <TextView
                android:id="@+id/time_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="06:10 AM"
                android:textAllCaps="true"
                android:textColor="#292B76"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@id/time_from"
                app:layout_constraintEnd_toEndOf="@id/flight_date"
                app:layout_constraintTop_toTopOf="@id/time_from" />

            <ImageView
                android:id="@+id/img_hand"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/vector2"
                app:layout_constraintBottom_toBottomOf="@id/txt_from"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_from" />

            <View
                android:layout_width="@dimen/_30sdp"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/_10ssp"
                android:background="#292B76"
                app:layout_constraintBottom_toBottomOf="@id/img_hand"
                app:layout_constraintEnd_toStartOf="@id/img_hand"
                app:layout_constraintTop_toTopOf="@id/img_hand" />

            <View
                android:layout_width="@dimen/_30sdp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_10ssp"
                android:background="#292B76"
                app:layout_constraintBottom_toBottomOf="@id/img_hand"
                app:layout_constraintStart_toEndOf="@id/img_hand"
                app:layout_constraintTop_toTopOf="@id/img_hand" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/select_verifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:text="Select a Verifier(s) "
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintStart_toStartOf="@id/text_title"/>
<TextView
    android:layout_width="@dimen/_17sdp"
    android:layout_height="@dimen/_17sdp"
    android:text="i"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:textAllCaps="false"
    android:textSize="@dimen/_12ssp"
    android:backgroundTint="#002E56"
    android:gravity="center"
    android:textAlignment="center"
    android:background="@drawable/bg_circle"
    android:layout_marginStart="@dimen/_5sdp"
    app:layout_constraintTop_toTopOf="@id/select_verifier"
    app:layout_constraintStart_toEndOf="@id/select_verifier"
    app:layout_constraintBottom_toBottomOf="@id/select_verifier"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_verifier"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:backgroundTint="#002E56"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:fontFamily="@font/roboto"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_title"
        app:layout_constraintTop_toBottomOf="@id/recycler" />

</androidx.constraintlayout.widget.ConstraintLayout>