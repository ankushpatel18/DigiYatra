<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/dotted_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_air_india"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:src="@drawable/bg_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/issuer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air India"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_10ssp"
        app:layout_constraintStart_toEndOf="@id/img_air_india"
        app:layout_constraintTop_toTopOf="@id/img_air_india"
        app:layout_constraintBottom_toBottomOf="@id/img_air_india"/>
    <TextView
        android:id="@+id/txt_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HYZ"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="@id/img_air_india"
        app:layout_constraintTop_toBottomOf="@id/img_air_india"/>
    <TextView
        android:id="@+id/time_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06:10 AM"
        android:textAllCaps="true"
        android:textColor="#292B76"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="@id/img_air_india"
        app:layout_constraintTop_toBottomOf="@id/txt_from"/>
    <TextView
        android:id="@+id/flight_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday, January 11, 2022"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_air_india"
        app:layout_constraintBottom_toBottomOf="@id/img_air_india"/>
    <TextView
        android:id="@+id/txt_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HYZ"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="@id/flight_date"
        app:layout_constraintTop_toTopOf="@id/txt_from"
        app:layout_constraintBottom_toBottomOf="@id/txt_from"/>
    <TextView
        android:id="@+id/time_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06:10 AM"
        android:textAllCaps="true"
        android:textColor="#292B76"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="@id/flight_date"
        app:layout_constraintTop_toTopOf="@id/time_from"
        app:layout_constraintBottom_toBottomOf="@id/time_from"/>
<ImageView
    android:id="@+id/img_hand"
    android:layout_width="@dimen/_20sdp"
    android:layout_height="@dimen/_20sdp"
    android:src="@drawable/vector2"
    app:layout_constraintTop_toTopOf="@id/txt_from"
    app:layout_constraintBottom_toBottomOf="@id/txt_from"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:layout_width="@dimen/_30sdp"
        android:layout_height="1dp"
        android:background="#292B76"
        android:layout_marginEnd="@dimen/_10ssp"
        app:layout_constraintEnd_toStartOf="@id/img_hand"
        app:layout_constraintTop_toTopOf="@id/img_hand"
        app:layout_constraintBottom_toBottomOf="@id/img_hand"/>
    <View
        android:layout_width="@dimen/_30sdp"
        android:layout_height="1dp"
        android:background="#292B76"
        android:layout_marginStart="@dimen/_10ssp"
        app:layout_constraintStart_toEndOf="@id/img_hand"
        app:layout_constraintTop_toTopOf="@id/img_hand"
        app:layout_constraintBottom_toBottomOf="@id/img_hand"/>
    <Button
        android:id="@+id/ShareBtn"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:backgroundTint="#002E56"
        android:text="Share"
        android:textAllCaps="true"
        android:textSize="@dimen/_5ssp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@id/flight_date"
        app:layout_constraintTop_toBottomOf="@id/time_to"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>